{% comment %}
  Footer Section
{% endcomment %}

<footer class="footer" style="background: var(--color-footer-bg); color: var(--color-footer-text);">
  {%- if section.settings.show_newsletter -%}
    <div class="footer__newsletter">
      <div class="container">
        <div class="newsletter-section">
          <div class="newsletter-section__content">
            <h3 class="newsletter-section__title">{{ section.settings.newsletter_title }}</h3>
            <p class="newsletter-section__text">{{ section.settings.newsletter_text }}</p>
          </div>
          <div class="newsletter-section__form">
            {% form 'customer', class: 'newsletter-form' %}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="newsletter-form__inner">
                <input 
                  type="email" 
                  name="contact[email]" 
                  placeholder="Enter your email" 
                  required
                  class="newsletter-form__input"
                >
                <button type="submit" class="newsletter-form__button button button--primary">
                  Subscribe
                </button>
              </div>
            {% endform %}
          </div>
        </div>
      </div>
    </div>
  {%- endif -%}
  
  <div class="footer__main">
    <div class="container">
      <div class="footer__grid">
        {%- comment %} Logo & About {% endcomment -%}
        <div class="footer__block footer__about">
          <div class="footer__logo">
            {%- if settings.logo != blank -%}
              <img src="{{ settings.logo | image_url: width: 200 }}" alt="{{ shop.name }}" loading="lazy">
            {%- else -%}
              <span class="footer__logo-text">{{ shop.name }}</span>
            {%- endif -%}
          </div>
          <p class="footer__about-text">{{ section.settings.about_text }}</p>
          
          {%- comment %} Social Links - Controlled by Theme Settings {% endcomment -%}
          {%- if settings.footer_show_social -%}
            <div class="footer__social">
              {%- if settings.social_instagram != blank -%}
                <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
                  {% render 'icon', icon: 'instagram', size: 20 %}
                </a>
              {%- endif -%}
              {%- if settings.social_facebook != blank -%}
                <a href="{{ settings.social_facebook }}" target="_blank" rel="noopener" aria-label="Facebook">
                  {% render 'icon', icon: 'facebook', size: 20 %}
                </a>
              {%- endif -%}
              {%- if settings.social_twitter != blank -%}
                <a href="{{ settings.social_twitter }}" target="_blank" rel="noopener" aria-label="Twitter">
                  {% render 'icon', icon: 'twitter', size: 20 %}
                </a>
              {%- endif -%}
              {%- if settings.social_youtube != blank -%}
                <a href="{{ settings.social_youtube }}" target="_blank" rel="noopener" aria-label="YouTube">
                  {% render 'icon', icon: 'youtube', size: 20 %}
                </a>
              {%- endif -%}
              {%- if settings.social_pinterest != blank -%}
                <a href="{{ settings.social_pinterest }}" target="_blank" rel="noopener" aria-label="Pinterest">
                  {% render 'icon', icon: 'pinterest', size: 20 %}
                </a>
              {%- endif -%}
              {%- if settings.social_tiktok != blank -%}
                <a href="{{ settings.social_tiktok }}" target="_blank" rel="noopener" aria-label="TikTok">
                  {% render 'icon', icon: 'tiktok', size: 20 %}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
        
        {%- comment %} Menu Columns {% endcomment -%}
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'menu' -%}
              <div class="footer__block footer__menu" {{ block.shopify_attributes }}>
                <h4 class="footer__heading">{{ block.settings.title }}</h4>
                <ul class="footer__links">
                  {%- for link in block.settings.menu.links -%}
                    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                  {%- endfor -%}
                </ul>
              </div>
          {%- endcase -%}
        {%- endfor -%}
        
        {%- comment %} Contact Info {% endcomment -%}
        <div class="footer__block footer__contact">
          <h4 class="footer__heading">Contact Us</h4>
          <ul class="footer__contact-list">
            {%- if settings.contact_email != blank -%}
              <li>
                <a href="mailto:{{ settings.contact_email }}">{{ settings.contact_email }}</a>
              </li>
            {%- endif -%}
            {%- if settings.contact_phone != blank -%}
              <li>
                <a href="tel:{{ settings.contact_phone }}">{{ settings.contact_phone }}</a>
              </li>
            {%- endif -%}
            {%- if settings.contact_whatsapp != blank -%}
              <li>
                <a href="https://wa.me/{{ settings.contact_whatsapp }}" target="_blank" rel="noopener">
                  WhatsApp Support
                </a>
              </li>
            {%- endif -%}
          </ul>
          
          {%- comment %} Trust Badges {% endcomment -%}
          <div class="footer__trust">
            {%- if settings.show_cod_badge -%}
              <div class="footer__trust-badge">
                {% render 'icon', icon: 'package', size: 18 %}
                <span>COD Available</span>
              </div>
            {%- endif -%}
            {%- if settings.show_returns_badge -%}
              <div class="footer__trust-badge">
                {% render 'icon', icon: 'refresh', size: 18 %}
                <span>Easy Returns</span>
              </div>
            {%- endif -%}
            {%- if settings.show_secure_badge -%}
              <div class="footer__trust-badge">
                {% render 'icon', icon: 'shield', size: 18 %}
                <span>Secure Payments</span>
              </div>
            {%- endif -%}
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="footer__bottom">
    <div class="container">
      <div class="footer__bottom-inner">
        <p class="footer__copyright">
          {{ settings.footer_copyright | default: 'Â© ' | append: 'now' | date: '%Y' | append: ' ' | append: shop.name | append: '. All rights reserved.' }}
        </p>
        {%- if settings.footer_show_payment -%}
          <div class="footer__payments">
            {{ shop.enabled_payment_types | payment_type_svg_tag }}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    margin-top: auto;
  }
  
  .footer__newsletter {
    padding: 3rem 0;
    background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
    color: #fff;
  }
  
  .newsletter-section {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
  }
  
  .newsletter-section__content {
    flex: 1;
    min-width: 280px;
  }
  
  .newsletter-section__title {
    font-size: 1.75rem;
    margin-bottom: 0.5rem;
  }
  
  .newsletter-section__text {
    opacity: 0.9;
    margin: 0;
  }
  
  .newsletter-section__form {
    flex: 1;
    min-width: 280px;
    max-width: 450px;
  }
  
  .newsletter-form__inner {
    display: flex;
    gap: 0.5rem;
  }
  
  .newsletter-form__input {
    flex: 1;
    padding: 0.875rem 1rem;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: var(--border-radius);
    background: rgba(255, 255, 255, 0.1);
    color: #fff;
    font-size: 1rem;
  }
  
  .newsletter-form__input::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }
  
  .newsletter-form__input:focus {
    outline: none;
    border-color: #fff;
    background: rgba(255, 255, 255, 0.2);
  }
  
  .newsletter-form__button {
    background: #fff;
    color: var(--color-primary);
    white-space: nowrap;
  }
  
  .footer__main {
    padding: 4rem 0;
  }
  
  .footer__grid {
    display: grid;
    grid-template-columns: 1.5fr repeat(3, 1fr);
    gap: 3rem;
  }
  
  .footer__logo {
    margin-bottom: 1.25rem;
  }
  
  .footer__logo img {
    max-width: 150px;
  }
  
  .footer__logo-text {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
  }
  
  .footer__about-text {
    font-size: 0.9375rem;
    opacity: 0.8;
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }
  
  .footer__social {
    display: flex;
    gap: 0.75rem;
  }
  
  .footer__social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    transition: background-color 0.2s, transform 0.2s;
  }
  
  .footer__social a:hover {
    background: var(--color-primary);
    transform: translateY(-3px);
  }
  
  .footer__heading {
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1.5rem;
  }
  
  .footer__links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer__links li {
    margin-bottom: 0.75rem;
  }
  
  .footer__links a {
    font-size: 0.9375rem;
    opacity: 0.8;
    transition: opacity 0.2s, color 0.2s;
  }
  
  .footer__links a:hover {
    opacity: 1;
    color: var(--color-primary);
  }
  
  .footer__contact-list {
    list-style: none;
    padding: 0;
    margin: 0 0 1.5rem;
  }
  
  .footer__contact-list li {
    margin-bottom: 0.75rem;
  }
  
  .footer__contact-list a {
    font-size: 0.9375rem;
    opacity: 0.8;
  }
  
  .footer__contact-list a:hover {
    opacity: 1;
    color: var(--color-primary);
  }
  
  .footer__trust {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .footer__trust-badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.8125rem;
    opacity: 0.8;
  }
  
  .footer__trust-badge svg {
    color: var(--color-primary);
  }
  
  .footer__bottom {
    padding: 1.5rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .footer__bottom-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .footer__copyright {
    font-size: 0.875rem;
    opacity: 0.7;
    margin: 0;
  }
  
  .footer__payments {
    display: flex;
    gap: 0.5rem;
  }
  
  .footer__payments svg {
    height: 24px;
    width: auto;
  }
  
  @media (max-width: 1024px) {
    .footer__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .footer__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .newsletter-section {
      text-align: center;
    }
    
    .newsletter-section__form {
      max-width: 100%;
    }
    
    .newsletter-form__inner {
      flex-direction: column;
    }
    
    .footer__bottom-inner {
      justify-content: center;
      text-align: center;
    }
  }
</style>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_newsletter",
      "label": "Show newsletter section",
      "default": true
    },
    {
      "type": "text",
      "id": "newsletter_title",
      "label": "Newsletter title",
      "default": "Join the SadaKappda Community"
    },
    {
      "type": "text",
      "id": "newsletter_text",
      "label": "Newsletter text",
      "default": "Subscribe for exclusive offers, new arrivals, and style inspiration."
    },
    {
      "type": "textarea",
      "id": "about_text",
      "label": "About text",
      "default": "Premium in feel. Thoughtful in design. Honest in price. SadaKappda is built on the belief that refinement does not need exaggeration."
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Quick Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        {
          "type": "menu",
          "settings": {
            "title": "Shop"
          }
        },
        {
          "type": "menu",
          "settings": {
            "title": "Support"
          }
        }
      ]
    }
  ]
}
{% endschema %}