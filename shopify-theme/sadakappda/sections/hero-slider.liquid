{% comment %}
  Hero Slider Section - Bewakoof-style dynamic sliding blocks
{% endcomment %}

{%- if section.blocks.size > 0 -%}
  <section class="hero-slider section--no-padding-top section--no-padding-bottom">
    <div class="hero-slider__wrapper">
      {%- for block in section.blocks -%}
        <div 
          class="hero-slide {% if forloop.first %}is-active{% endif %}" 
          {{ block.shopify_attributes }}
          style="
            {%- if block.settings.background_image != blank -%}
              background-image: url('{{ block.settings.background_image | image_url: width: 1920 }}');
            {%- endif -%}
            background-color: {{ block.settings.background_color }};
          "
        >
          {%- if block.settings.background_video != blank -%}
            <video class="hero-slide__video" autoplay loop muted playsinline>
              <source src="{{ block.settings.background_video }}" type="video/mp4">
            </video>
          {%- endif -%}
          
          <div class="hero-slide__overlay" style="opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>
          
          <div class="hero-slide__content" style="text-align: {{ block.settings.text_alignment }};">
            <div class="container">
              <div class="hero-slide__inner">
                {%- if block.settings.subheading != blank -%}
                  <span class="hero-slide__subheading">{{ block.settings.subheading }}</span>
                {%- endif -%}
                
                {%- if block.settings.heading != blank -%}
                  <h1 class="hero-slide__heading" style="color: {{ block.settings.text_color }};">
                    {{ block.settings.heading }}
                  </h1>
                {%- endif -%}
                
                {%- if block.settings.text != blank -%}
                  <p class="hero-slide__text" style="color: {{ block.settings.text_color }};">
                    {{ block.settings.text }}
                  </p>
                {%- endif -%}
                
                <div class="hero-slide__buttons">
                  {%- if block.settings.button_text != blank -%}
                    <a href="{{ block.settings.button_link }}" class="button button--primary button--large">
                      {{ block.settings.button_text }}
                    </a>
                  {%- endif -%}
                  
                  {%- if block.settings.button_text_2 != blank -%}
                    <a href="{{ block.settings.button_link_2 }}" class="button button--secondary button--large" style="color: {{ block.settings.text_color }}; border-color: {{ block.settings.text_color }};">
                      {{ block.settings.button_text_2 }}
                    </a>
                  {%- endif -%}
                </div>
              </div>
            </div>
          </div>
        </div>
      {%- endfor -%}
      
      {%- if section.blocks.size > 1 -%}
        <button class="hero-slider__prev" aria-label="Previous slide">
          {% render 'icon', icon: 'chevron-left', size: 32 %}
        </button>
        <button class="hero-slider__next" aria-label="Next slide">
          {% render 'icon', icon: 'chevron-right', size: 32 %}
        </button>
        
        <div class="hero-slider__dots">
          {%- for block in section.blocks -%}
            <button class="hero-slider__dot {% if forloop.first %}is-active{% endif %}" aria-label="Go to slide {{ forloop.index }}"></button>
          {%- endfor -%}
        </div>
      {%- endif -%}
    </div>
  </section>
{%- endif -%}

<style>
  .hero-slider {
    position: relative;
    overflow: hidden;
  }
  
  .hero-slider__wrapper {
    position: relative;
    height: {{ section.settings.height_mobile }}vh;
  }
  
  @media (min-width: 769px) {
    .hero-slider__wrapper {
      height: {{ section.settings.height_desktop }}vh;
    }
  }
  
  .hero-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.6s ease, visibility 0.6s ease;
  }
  
  .hero-slide.is-active {
    opacity: 1;
    visibility: visible;
  }
  
  .hero-slide__video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    transform: translate(-50%, -50%);
    object-fit: cover;
  }
  
  .hero-slide__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
  }
  
  .hero-slide__content {
    position: relative;
    height: 100%;
    display: flex;
    align-items: center;
    z-index: 2;
  }
  
  .hero-slide__inner {
    max-width: 700px;
    padding: 2rem 0;
  }
  
  .hero-slide__content[style*="center"] .hero-slide__inner {
    margin: 0 auto;
  }
  
  .hero-slide__content[style*="right"] .hero-slide__inner {
    margin-left: auto;
  }
  
  .hero-slide__subheading {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 1rem;
  }
  
  .hero-slide__heading {
    font-size: clamp(2rem, 5vw, 3.5rem);
    line-height: 1.1;
    margin-bottom: 1rem;
  }
  
  .hero-slide__text {
    font-size: 1.125rem;
    opacity: 0.9;
    margin-bottom: 2rem;
    max-width: 500px;
  }
  
  .hero-slide__content[style*="center"] .hero-slide__text {
    margin-left: auto;
    margin-right: auto;
  }
  
  .hero-slide__buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }
  
  .hero-slide__content[style*="center"] .hero-slide__buttons {
    justify-content: center;
  }
  
  .hero-slide__content[style*="right"] .hero-slide__buttons {
    justify-content: flex-end;
  }
  
  .hero-slider__prev,
  .hero-slider__next {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #1A1A1A;
    transition: background-color 0.2s, transform 0.2s;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  }
  
  .hero-slider__prev:hover,
  .hero-slider__next:hover {
    background: #fff;
    transform: translateY(-50%) scale(1.1);
  }
  
  .hero-slider__prev {
    left: 1.5rem;
  }
  
  .hero-slider__next {
    right: 1.5rem;
  }
  
  .hero-slider__dots {
    position: absolute;
    bottom: 2rem;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 0.5rem;
    z-index: 10;
  }
  
  .hero-slider__dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    border: 2px solid #fff;
    background: transparent;
    cursor: pointer;
    transition: background-color 0.2s, transform 0.2s;
  }
  
  .hero-slider__dot:hover {
    transform: scale(1.2);
  }
  
  .hero-slider__dot.is-active {
    background: #fff;
  }
  
  @media (max-width: 768px) {
    .hero-slider__prev,
    .hero-slider__next {
      display: none;
    }
    
    .hero-slide__heading {
      font-size: 2rem;
    }
    
    .hero-slide__buttons {
      flex-direction: column;
    }
    
    .hero-slide__buttons .button {
      width: 100%;
    }
  }
</style>

