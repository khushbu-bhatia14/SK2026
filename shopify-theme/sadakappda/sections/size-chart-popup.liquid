<style>
  .size-chart-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
  }
  
  .size-chart-modal.is-open {
    opacity: 1;
    visibility: visible;
  }
  
  .size-chart-modal__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
  }
  
  .size-chart-modal__content {
    position: relative;
    width: 90%;
    max-width: 700px;
    max-height: 85vh;
    background: var(--color-body-bg, #fff);
    border-radius: 12px;
    overflow: hidden;
    transform: translateY(20px);
    transition: transform 0.3s;
  }
  
  .size-chart-modal.is-open .size-chart-modal__content {
    transform: translateY(0);
  }
  
  .size-chart-modal__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.25rem 1.5rem;
    border-bottom: 1px solid rgba(128, 128, 128, 0.2);
    background: var(--color-secondary-bg, #f8f8f8);
  }
  
  .size-chart-modal__title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
  }
  
  .size-chart-modal__close {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: transparent;
    border: none;
    cursor: pointer;
    color: inherit;
    transition: opacity 0.2s;
  }
  
  .size-chart-modal__close:hover {
    opacity: 0.7;
  }
  
  .size-chart-modal__body {
    padding: 1.5rem;
    overflow-y: auto;
    max-height: calc(85vh - 80px);
  }
  
  .size-chart-modal__description {
    margin-bottom: 1.5rem;
    font-size: 0.9375rem;
    color: rgba(128, 128, 128, 0.8);
  }
  
  /* Measurement Guide */
  .size-chart__measure-guide {
    margin-bottom: 2rem;
    padding: 1.25rem;
    background: var(--color-secondary-bg, #f8f8f8);
    border-radius: 8px;
  }
  
  .size-chart__measure-guide h3 {
    font-size: 1rem;
    margin-bottom: 1rem;
  }
  
  .size-chart__measure-tips {
    display: grid;
    gap: 1rem;
  }
  
  .size-chart__measure-tip {
    display: flex;
    gap: 0.75rem;
  }
  
  .size-chart__measure-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }
  
  .size-chart__measure-tip strong {
    display: block;
    font-size: 0.875rem;
    margin-bottom: 0.25rem;
  }
  
  .size-chart__measure-tip p {
    font-size: 0.8125rem;
    margin: 0;
    opacity: 0.7;
  }
  
  /* Tabs */
  .size-chart__tabs {
    margin-bottom: 1.5rem;
  }
  
  .size-chart__tab-buttons {
    display: flex;
    gap: 0.5rem;
    margin-bottom: 1rem;
    border-bottom: 2px solid rgba(128, 128, 128, 0.15);
    padding-bottom: 0;
  }
  
  .size-chart__tab-btn {
    padding: 0.75rem 1.25rem;
    background: transparent;
    border: none;
    font-size: 0.9375rem;
    font-weight: 500;
    cursor: pointer;
    color: rgba(128, 128, 128, 0.6);
    border-bottom: 2px solid transparent;
    margin-bottom: -2px;
    transition: color 0.2s, border-color 0.2s;
  }
  
  .size-chart__tab-btn:hover {
    color: inherit;
  }
  
  .size-chart__tab-btn.is-active {
    color: var(--color-primary, #FF6B35);
    border-bottom-color: var(--color-primary, #FF6B35);
  }
  
  .size-chart__tab-content {
    display: none;
  }
  
  .size-chart__tab-content.is-active {
    display: block;
  }
  
  /* Table */
  .size-chart__table-wrapper {
    overflow-x: auto;
    border-radius: 8px;
    border: 1px solid rgba(128, 128, 128, 0.15);
  }
  
  .size-chart__table {
    width: 100%;
    border-collapse: collapse;
    font-size: 0.875rem;
  }
  
  .size-chart__table th,
  .size-chart__table td {
    padding: 0.875rem 1rem;
    text-align: center;
    border-bottom: 1px solid rgba(128, 128, 128, 0.1);
  }
  
  .size-chart__table th {
    background: var(--color-secondary-bg, #f8f8f8);
    font-weight: 600;
    font-size: 0.8125rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
  }
  
  .size-chart__table tbody tr:hover {
    background: rgba(255, 107, 53, 0.05);
  }
  
  .size-chart__table tbody tr:last-child td {
    border-bottom: none;
  }
  
  /* Fit Tip */
  .size-chart__fit-tip {
    display: flex;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    background: rgba(255, 107, 53, 0.08);
    border-radius: 8px;
    border-left: 4px solid var(--color-primary, #FF6B35);
    margin-bottom: 1.5rem;
  }
  
  .size-chart__fit-tip-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }
  
  .size-chart__fit-tip p {
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.5;
  }
  
  /* Help Contact */
  .size-chart__help {
    text-align: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(128, 128, 128, 0.15);
  }
  
  .size-chart__help p {
    margin: 0 0 0.75rem;
    font-size: 0.875rem;
    opacity: 0.7;
  }
  
  .size-chart__help-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1.25rem;
    background: #25D366;
    color: #fff;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    transition: background 0.2s, transform 0.2s;
  }
  
  .size-chart__help-link:hover {
    background: #20bd5a;
    transform: translateY(-2px);
  }
  
  @media (max-width: 600px) {
    .size-chart-modal__content {
      width: 95%;
      max-height: 90vh;
    }
    
    .size-chart-modal__body {
      max-height: calc(90vh - 70px);
      padding: 1rem;
    }
    
    .size-chart__table th,
    .size-chart__table td {
      padding: 0.625rem 0.5rem;
      font-size: 0.8125rem;
    }
    
    .size-chart__tab-btn {
      padding: 0.625rem 0.875rem;
      font-size: 0.875rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const modal = document.querySelector('[data-size-chart-modal]');
    const closeButtons = document.querySelectorAll('[data-size-chart-close]');
    const sizeGuideLinks = document.querySelectorAll('a[href="#size-guide"], .product-option__size-guide');
    const tabButtons = document.querySelectorAll('.size-chart__tab-btn');
    
    // Open modal
    sizeGuideLinks.forEach(link => {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        modal.classList.add('is-open');
        document.body.style.overflow = 'hidden';
      });
    });
    
    // Close modal
    closeButtons.forEach(btn => {
      btn.addEventListener('click', function() {
        modal.classList.remove('is-open');
        document.body.style.overflow = '';
      });
    });
    
    // Close on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && modal.classList.contains('is-open')) {
        modal.classList.remove('is-open');
        document.body.style.overflow = '';
      }
    });
    
    // Tab switching
    tabButtons.forEach(btn => {
      btn.addEventListener('click', function() {
        const tabName = this.getAttribute('data-tab');
        
        // Update button states
        tabButtons.forEach(b => b.classList.remove('is-active'));
        this.classList.add('is-active');
        
        // Update content states
        document.querySelectorAll('.size-chart__tab-content').forEach(content => {
          content.classList.remove('is-active');
        });
        document.querySelector(`[data-tab-content="${tabName}"]`).classList.add('is-active');
      });
    });
  });
</script>

