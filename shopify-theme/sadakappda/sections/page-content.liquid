{% comment %}
  Page Content Section
{% endcomment %}

<section class="section page-content">
  <div class="container">
    <div class="page-content__inner">
      {{ page.content }}
    </div>
  </div>
</section>

<style>
  .page-content__inner {
    max-width: 800px;
    margin: 0 auto;
  }
  
  .page-content__inner h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
  
  .page-content__inner h3 {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  
  .page-content__inner p {
    margin-bottom: 1rem;
    line-height: 1.8;
  }
  
  .page-content__inner ul,
  .page-content__inner ol {
    margin-bottom: 1rem;
    padding-left: 1.5rem;
  }
  
  .page-content__inner li {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }
  
  .page-content__inner img {
    max-width: 100%;
    border-radius: var(--border-radius);
    margin: 1.5rem 0;
  }
  
  .page-content__inner blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: 1.5rem;
    margin: 1.5rem 0;
    font-style: italic;
    opacity: 0.85;
  }
</style>

{% schema %}
{
  "name": "Page Content",
  "settings": []
}
{% endschema %}