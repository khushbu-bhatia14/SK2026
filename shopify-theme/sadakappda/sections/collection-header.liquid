{% comment %}
  Collection Header Section
{% endcomment %}

<section class="collection-header" style="
  {%- if collection.image -%}
    background-image: url('{{ collection.image | image_url: width: 1920 }}');
  {%- endif -%}
">
  <div class="collection-header__overlay"></div>
  <div class="container">
    <div class="collection-header__content">
      <nav class="breadcrumbs">
        <a href="/">Home</a>
        <span class="breadcrumbs__separator">/</span>
        <span>{{ collection.title }}</span>
      </nav>
      <h1 class="collection-header__title">{{ collection.title }}</h1>
      {%- if collection.description != blank -%}
        <div class="collection-header__description">{{ collection.description }}</div>
      {%- endif -%}
      <p class="collection-header__count">{{ collection.products_count }} products</p>
    </div>
  </div>
</section>

<style>
  .collection-header {
    position: relative;
    background-color: var(--color-dark-bg);
    background-size: cover;
    background-position: center;
    padding: 4rem 0;
    color: #fff;
  }
  
  .collection-header__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
  }
  
  .collection-header__content {
    position: relative;
    z-index: 1;
    max-width: 700px;
  }
  
  .collection-header .breadcrumbs {
    margin-bottom: 1rem;
  }
  
  .collection-header .breadcrumbs a,
  .collection-header .breadcrumbs span {
    color: rgba(255, 255, 255, 0.8);
  }
  
  .collection-header__title {
    font-size: 2.5rem;
    margin-bottom: 0.75rem;
  }
  
  .collection-header__description {
    font-size: 1rem;
    opacity: 0.85;
    margin-bottom: 0.75rem;
  }
  
  .collection-header__count {
    font-size: 0.875rem;
    opacity: 0.7;
    margin: 0;
  }
  
  @media (max-width: 768px) {
    .collection-header {
      padding: 3rem 0;
    }
    
    .collection-header__title {
      font-size: 1.75rem;
    }
  }
</style>

{% schema %}
{
  "name": "Collection Header",
  "settings": []
}
{% endschema %}