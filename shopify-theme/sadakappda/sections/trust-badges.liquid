{% comment %}
  Trust Badges Strip Section
{% endcomment %}

{%- if section.blocks.size > 0 -%}
  <section class="trust-strip section--no-padding-top section--no-padding-bottom" style="background: {{ section.settings.background_color }};">
    <div class="container">
      <div class="trust-strip__inner">
        {%- for block in section.blocks -%}
          <div class="trust-strip__item" {{ block.shopify_attributes }}>
            {%- case block.settings.icon -%}
              {%- when 'truck' -%}
                {% render 'icon', icon: 'truck', size: 24 %}
              {%- when 'package' -%}
                {% render 'icon', icon: 'package', size: 24 %}
              {%- when 'refresh' -%}
                {% render 'icon', icon: 'refresh', size: 24 %}
              {%- when 'shield' -%}
                {% render 'icon', icon: 'shield', size: 24 %}
              {%- when 'credit-card' -%}
                {% render 'icon', icon: 'credit-card', size: 24 %}
              {%- when 'check' -%}
                {% render 'icon', icon: 'check', size: 24 %}
            {%- endcase -%}
            <div class="trust-strip__content">
              <span class="trust-strip__title">{{ block.settings.title }}</span>
              {%- if block.settings.text != blank -%}
                <span class="trust-strip__text">{{ block.settings.text }}</span>
              {%- endif -%}
            </div>
          </div>
        {%- endfor -%}
      </div>
    </div>
  </section>
{%- endif -%}

<style>
  .trust-strip {
    padding: 1.25rem 0;
    border-top: 1px solid rgba(128, 128, 128, 0.1);
    border-bottom: 1px solid rgba(128, 128, 128, 0.1);
  }
  
  .trust-strip__inner {
    display: flex;
    align-items: center;
    justify-content: space-around;
    gap: 1.5rem;
    flex-wrap: wrap;
  }
  
  .trust-strip__item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .trust-strip__item svg {
    color: var(--color-primary);
    flex-shrink: 0;
  }
  
  .trust-strip__content {
    display: flex;
    flex-direction: column;
  }
  
  .trust-strip__title {
    font-weight: 600;
    font-size: 0.9375rem;
  }
  
  .trust-strip__text {
    font-size: 0.8125rem;
    opacity: 0.7;
  }
  
  @media (max-width: 768px) {
    .trust-strip__inner {
      justify-content: center;
    }
    
    .trust-strip__item {
      flex: 1 1 45%;
      justify-content: center;
    }
    
    .trust-strip__title {
      font-size: 0.8125rem;
    }
    
    .trust-strip__text {
      display: none;
    }
  }
</style>

{% schema %}
{
  "name": "Trust Badges",
  "tag": "section",
  "class": "section-trust-strip",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent"
    }
  ],
  "blocks": [
    {
      "type": "badge",
      "name": "Trust Badge",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "truck", "label": "Truck (Shipping)" },
            { "value": "package", "label": "Package (COD)" },
            { "value": "refresh", "label": "Refresh (Returns)" },
            { "value": "shield", "label": "Shield (Secure)" },
            { "value": "credit-card", "label": "Credit Card (Payment)" },
            { "value": "check", "label": "Check (Quality)" }
          ],
          "default": "truck"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "On orders above \u20b9999"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges",
      "blocks": [
        {
          "type": "badge",
          "settings": {
            "icon": "truck",
            "title": "Fast Shipping",
            "text": "3-7 business days"
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon": "package",
            "title": "COD Available",
            "text": "Pay on delivery"
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon": "refresh",
            "title": "Easy Returns",
            "text": "7-day return policy"
          }
        },
        {
          "type": "badge",
          "settings": {
            "icon": "shield",
            "title": "Secure Payments",
            "text": "100% secure checkout"
          }
        }
      ]
    }
  ]
}
{% endschema %}