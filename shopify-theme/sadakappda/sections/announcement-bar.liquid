{% comment %}
  Announcement Bar Section
{% endcomment %}

{%- if section.settings.show_announcement -%}
  <div class="announcement-bar" style="
    background: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};
  ">
    <div class="container">
      <div class="announcement-slider">
        {%- for block in section.blocks -%}
          <div class="announcement-slide {% if forloop.first %}is-active{% endif %}" {{ block.shopify_attributes }}>
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="announcement-slide__link">
                {{ block.settings.text }}
              </a>
            {%- else -%}
              <span>{{ block.settings.text }}</span>
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>
  </div>
{%- endif -%}

<style>
  .announcement-bar {
    padding: 0.625rem 0;
    font-size: 0.8125rem;
    font-weight: 500;
    letter-spacing: 0.02em;
    text-align: center;
    position: relative;
    z-index: 100;
  }
  
  .announcement-slider {
    position: relative;
    height: 1.25rem;
    overflow: hidden;
  }
  
  .announcement-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    transform: translateY(10px);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }
  
  .announcement-slide.is-active {
    opacity: 1;
    transform: translateY(0);
  }
  
  .announcement-slide__link {
    color: inherit;
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .announcement-slide__link:hover {
    text-decoration: none;
  }
</style>

{% schema %}
{
  "name": "Announcement Bar",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_announcement",
      "label": "Show announcement bar",
      "default": true
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#0A0A0A"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    }
  ],
  "blocks": [
    {
      "type": "announcement",
      "name": "Announcement",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Free Shipping on orders above \u20b9999"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Announcement Bar",
      "blocks": [
        {
          "type": "announcement",
          "settings": {
            "text": "Free Shipping on orders above \u20b9999"
          }
        },
        {
          "type": "announcement",
          "settings": {
            "text": "Easy Returns & Exchange | COD Available"
          }
        }
      ]
    }
  ]
}
{% endschema %}