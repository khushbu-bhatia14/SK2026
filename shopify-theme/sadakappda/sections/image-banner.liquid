{% comment %}
  Image Banner Section
{% endcomment %}

<section class="image-banner section--no-padding-top section--no-padding-bottom" {% if section.settings.full_width == false %}style="padding: 0 1.5rem;"{% endif %}>
  <div class="{% if section.settings.full_width %}container-fluid{% else %}container{% endif %}">
    <div class="image-banner__wrapper" style="
      {%- if section.settings.image != blank -%}
        background-image: url('{{ section.settings.image | image_url: width: 1920 }}');
      {%- endif -%}
      min-height: {{ section.settings.height_mobile }}px;
    ">
      <div class="image-banner__overlay" style="opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};"></div>
      
      <div class="image-banner__content" style="
        text-align: {{ section.settings.text_alignment }};
        justify-content: {{ section.settings.text_alignment }};
      ">
        <div class="image-banner__inner">
          {%- if section.settings.subheading != blank -%}
            <span class="image-banner__subheading">{{ section.settings.subheading }}</span>
          {%- endif -%}
          
          {%- if section.settings.heading != blank -%}
            <h2 class="image-banner__heading" style="color: {{ section.settings.text_color }};">{{ section.settings.heading }}</h2>
          {%- endif -%}
          
          {%- if section.settings.text != blank -%}
            <p class="image-banner__text" style="color: {{ section.settings.text_color }};">{{ section.settings.text }}</p>
          {%- endif -%}
          
          {%- if section.settings.button_text != blank -%}
            <a href="{{ section.settings.button_link }}" class="button button--primary button--large">
              {{ section.settings.button_text }}
            </a>
          {%- endif -%}
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .container-fluid {
    width: 100%;
  }
  
  .image-banner__wrapper {
    position: relative;
    background-size: cover;
    background-position: center;
    background-color: var(--color-dark-bg);
    border-radius: {% if section.settings.full_width %}0{% else %}var(--border-radius){% endif %};
    overflow: hidden;
    display: flex;
    align-items: center;
  }
  
  @media (min-width: 769px) {
    .image-banner__wrapper {
      min-height: {{ section.settings.height_desktop }}px !important;
    }
  }
  
  .image-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
  }
  
  .image-banner__content {
    position: relative;
    z-index: 1;
    width: 100%;
    padding: 3rem;
    display: flex;
  }
  
  .image-banner__inner {
    max-width: 600px;
  }
  
  .image-banner__content[style*="center"] .image-banner__inner {
    text-align: center;
  }
  
  .image-banner__content[style*="flex-end"] .image-banner__inner {
    margin-left: auto;
    text-align: right;
  }
  
  .image-banner__subheading {
    display: inline-block;
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    margin-bottom: 0.75rem;
  }
  
  .image-banner__heading {
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    margin-bottom: 1rem;
  }
  
  .image-banner__text {
    font-size: 1.0625rem;
    opacity: 0.9;
    margin-bottom: 1.5rem;
  }
  
  @media (max-width: 768px) {
    .image-banner__content {
      padding: 2rem 1.5rem;
    }
    
    .image-banner__content[style*="flex-end"] .image-banner__inner {
      margin-left: 0;
      text-align: left;
    }
  }
</style>

{% schema %}
{
  "name": "Image Banner",
  "tag": "section",
  "class": "section-image-banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "label": "Full width",
      "default": true
    },
    {
      "type": "range",
      "id": "height_desktop",
      "label": "Height on desktop",
      "min": 200,
      "max": 600,
      "step": 25,
      "default": 400,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "height_mobile",
      "label": "Height on mobile",
      "min": 150,
      "max": 400,
      "step": 25,
      "default": 300,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "label": "Overlay opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "default": 30,
      "unit": "%"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Image Banner"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#FFFFFF"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        { "value": "flex-start", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "flex-end", "label": "Right" }
      ],
      "default": "flex-start"
    }
  ],
  "presets": [
    {
      "name": "Image Banner"
    }
  ]
}
{% endschema %}