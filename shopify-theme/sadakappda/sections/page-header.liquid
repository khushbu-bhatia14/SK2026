{% comment %}
  Page Header Section
{% endcomment %}

<section class="page-header">
  <div class="container">
    <nav class="breadcrumbs">
      <a href="/">Home</a>
      <span class="breadcrumbs__separator">/</span>
      <span>{{ page.title }}</span>
    </nav>
    <h1 class="page-header__title">{{ page.title }}</h1>
  </div>
</section>

<style>
  .page-header {
    padding: 3rem 0 2rem;
    background: var(--color-secondary-bg);
  }
  
  .page-header__title {
    font-size: 2.25rem;
    margin: 0.5rem 0 0;
  }
  
  @media (max-width: 768px) {
    .page-header {
      padding: 2rem 0 1.5rem;
    }
    
    .page-header__title {
      font-size: 1.75rem;
    }
  }
</style>

{% schema %}
{
  "name": "Page Header",
  "settings": []
}
{% endschema %}