{% comment %}
  Category Blocks Section - Image Grid with Links (Bewakoof-style)
{% endcomment %}

<section class="section category-blocks" style="background: {{ section.settings.background_color }};">
  <div class="container">
    {%- if section.settings.title != blank -%}
      <div class="section-title">
        <h2 class="section-title__heading">{{ section.settings.title }}</h2>
        {%- if section.settings.subtitle != blank -%}
          <p class="section-title__subheading">{{ section.settings.subtitle }}</p>
        {%- endif -%}
      </div>
    {%- endif -%}
    
    <div class="category-blocks__grid category-blocks__grid--{{ section.settings.layout }}">
      {%- for block in section.blocks -%}
        <a href="{{ block.settings.link }}" class="category-block" {{ block.shopify_attributes }}>
          <div class="category-block__image">
            {%- if block.settings.image != blank -%}
              <img 
                src="{{ block.settings.image | image_url: width: 800 }}" 
                alt="{{ block.settings.title | escape }}" 
                loading="lazy"
              >
            {%- else -%}
              {%- comment %} Demo gradient background when no image {% endcomment -%}
              <div class="category-block__placeholder" style="
                background: linear-gradient(135deg, 
                  {%- if forloop.index == 1 -%}#2C3E50, #1A1A1A{%- endif -%}
                  {%- if forloop.index == 2 -%}#E91E8C, #FF6B35{%- endif -%}
                  {%- if forloop.index == 3 -%}#27ae60, #2ecc71{%- endif -%}
                  {%- if forloop.index >= 4 -%}#3498db, #2980b9{%- endif -%}
                );
              "></div>
            {%- endif -%}
          </div>
          <div class="category-block__overlay" style="background: {{ block.settings.overlay_color }}; opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};"></div>
          <div class="category-block__content" style="color: {{ block.settings.text_color }};">
            {%- if block.settings.subtitle != blank -%}
              <span class="category-block__subtitle">{{ block.settings.subtitle }}</span>
            {%- endif -%}
            <h3 class="category-block__title">{{ block.settings.title }}</h3>
            {%- if block.settings.button_text != blank -%}
              <span class="category-block__button">{{ block.settings.button_text }}</span>
            {%- endif -%}
          </div>
        </a>
      {%- endfor -%}
    </div>
  </div>
</section>

<style>
  .category-blocks__grid {
    display: grid;
    gap: 1rem;
  }
  
  .category-blocks__grid--2-columns {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .category-blocks__grid--3-columns {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .category-blocks__grid--4-columns {
    grid-template-columns: repeat(4, 1fr);
  }
  
  .category-blocks__grid--1-2 {
    grid-template-columns: 1fr 1fr;
  }
  
  .category-blocks__grid--1-2 .category-block:first-child {
    grid-row: span 2;
  }
  
  .category-blocks__grid--2-1 {
    grid-template-columns: 1fr 1fr;
  }
  
  .category-blocks__grid--2-1 .category-block:last-child {
    grid-row: span 2;
  }
  
  .category-block {
    position: relative;
    display: block;
    overflow: hidden;
    border-radius: var(--border-radius);
    text-decoration: none;
  }
  
  .category-block__image {
    position: relative;
    padding-top: {{ section.settings.image_ratio }}%;
    overflow: hidden;
  }
  
  .category-blocks__grid--1-2 .category-block:first-child .category-block__image,
  .category-blocks__grid--2-1 .category-block:last-child .category-block__image {
    padding-top: calc({{ section.settings.image_ratio }}% * 2 + 1rem);
  }
  
  .category-block__image img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .category-block:hover .category-block__image img {
    transform: scale(1.05);
  }
  
  .category-block__placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--color-secondary-bg);
  }
  
  .category-block__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  
  .category-block__content {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }
  
  .category-block__subtitle {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.8;
    margin-bottom: 0.25rem;
  }
  
  .category-block__title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.75rem;
    line-height: 1.2;
  }
  
  .category-block__button {
    display: inline-flex;
    padding: 0.5rem 1.25rem;
    background: #fff;
    color: #1A1A1A;
    font-size: 0.8125rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-radius: var(--button-radius);
    transition: transform 0.2s, background-color 0.2s;
  }
  
  .category-block:hover .category-block__button {
    background: var(--color-primary);
    color: #fff;
    transform: translateY(-2px);
  }
  
  @media (max-width: 768px) {
    .category-blocks__grid--3-columns,
    .category-blocks__grid--4-columns {
      grid-template-columns: repeat(2, 1fr);
    }
    
    .category-blocks__grid--1-2,
    .category-blocks__grid--2-1 {
      grid-template-columns: 1fr;
    }
    
    .category-blocks__grid--1-2 .category-block:first-child,
    .category-blocks__grid--2-1 .category-block:last-child {
      grid-row: span 1;
    }
    
    .category-blocks__grid--1-2 .category-block:first-child .category-block__image,
    .category-blocks__grid--2-1 .category-block:last-child .category-block__image {
      padding-top: {{ section.settings.image_ratio }}%;
    }
    
    .category-block__title {
      font-size: 1.25rem;
    }
  }
</style>

{% schema %}
{
  "name": "Category Blocks",
  "tag": "section",
  "class": "section-category-blocks",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
      "options": [
        { "value": "2-columns", "label": "2 Columns" },
        { "value": "3-columns", "label": "3 Columns" },
        { "value": "4-columns", "label": "4 Columns" },
        { "value": "1-2", "label": "1 Large + 2 Small" },
        { "value": "2-1", "label": "2 Small + 1 Large" }
      ],
      "default": "2-columns"
    },
    {
      "type": "range",
      "id": "image_ratio",
      "label": "Image aspect ratio",
      "min": 60,
      "max": 150,
      "step": 5,
      "default": 100,
      "unit": "%"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "transparent"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Shop Men"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "Shop Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        },
        {
          "type": "color",
          "id": "text_color",
          "label": "Text color",
          "default": "#FFFFFF"
        },
        {
          "type": "color",
          "id": "overlay_color",
          "label": "Overlay color",
          "default": "#000000"
        },
        {
          "type": "range",
          "id": "overlay_opacity",
          "label": "Overlay opacity",
          "min": 0,
          "max": 80,
          "step": 5,
          "default": 30,
          "unit": "%"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category Blocks",
      "blocks": [
        {
          "type": "category",
          "settings": {
            "title": "Shop Men",
            "button_text": "Shop Now"
          }
        },
        {
          "type": "category",
          "settings": {
            "title": "Shop Women",
            "button_text": "Shop Now"
          }
        }
      ]
    }
  ]
}
{% endschema %}