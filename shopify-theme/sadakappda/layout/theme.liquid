<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_primary }}">
  <link rel="canonical" href="{{ canonical_url }}">
  <link rel="preconnect" href="https://cdn.shopify.com" crossorigin>

  {%- if settings.favicon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
  {%- endif -%}

  {%- unless settings.font_heading.system? and settings.font_body.system? -%}
    <link rel="preconnect" href="https://fonts.shopifycdn.com" crossorigin>
  {%- endunless -%}

  <title>
    {{ page_title }}
    {%- if current_tags %} &ndash; tagged "{{ current_tags | join: ', ' }}"{% endif -%}
    {%- if current_page != 1 %} &ndash; Page {{ current_page }}{% endif -%}
    {%- unless page_title contains shop.name %} &ndash; {{ shop.name }}{% endunless -%}
  </title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {% render 'meta-tags' %}

  <script src="{{ 'theme.js' | asset_url }}" defer="defer"></script>
  {{ content_for_header }}

  {%- liquid
    assign font_heading = settings.font_heading
    assign font_body = settings.font_body
    assign font_heading_bold = font_heading | font_modify: 'weight', 'bold'
    assign font_heading_italic = font_heading | font_modify: 'style', 'italic'
    assign font_body_bold = font_body | font_modify: 'weight', 'bold'
    assign font_body_italic = font_body | font_modify: 'style', 'italic'
  -%}

  {% style %}
    {{ font_heading | font_face: font_display: 'swap' }}
    {{ font_body | font_face: font_display: 'swap' }}
    {{ font_heading_bold | font_face: font_display: 'swap' }}
    {{ font_heading_italic | font_face: font_display: 'swap' }}
    {{ font_body_bold | font_face: font_display: 'swap' }}
    {{ font_body_italic | font_face: font_display: 'swap' }}

    :root {
      /* Primary Colors */
      --color-primary: {{ settings.color_primary }};
      --color-secondary: {{ settings.color_secondary }};
      --color-primary-rgb: {{ settings.color_primary | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      --color-secondary-rgb: {{ settings.color_secondary | color_to_rgb | remove: 'rgb(' | remove: ')' }};
      
      /* Light Mode Colors */
      --color-light-bg: {{ settings.color_light_bg }};
      --color-light-text: {{ settings.color_light_text }};
      --color-light-secondary-bg: {{ settings.color_light_secondary_bg }};
      
      /* Dark Mode Colors */
      --color-dark-bg: {{ settings.color_dark_bg }};
      --color-dark-text: {{ settings.color_dark_text }};
      --color-dark-secondary-bg: {{ settings.color_dark_secondary_bg }};
      
      /* Typography */
      --font-heading: {{ font_heading.family }}, {{ font_heading.fallback_families }};
      --font-heading-weight: {{ font_heading.weight }};
      --font-heading-style: {{ font_heading.style }};
      --font-body: {{ font_body.family }}, {{ font_body.fallback_families }};
      --font-body-weight: {{ font_body.weight }};
      --font-body-style: {{ font_body.style }};
      --font-size-base: {{ settings.font_size_base }}px;
      
      /* Layout */
      --page-width: {{ settings.page_width }}px;
      --section-spacing: {{ settings.section_spacing }}px;
      --border-radius: {{ settings.border_radius }}px;
      
      /* Button Border Radius */
      {% case settings.button_style %}
        {% when 'rounded' %}
          --button-radius: {{ settings.border_radius }}px;
        {% when 'pill' %}
          --button-radius: 50px;
        {% when 'sharp' %}
          --button-radius: 0;
      {% endcase %}
      
      /* Color Mode Variables */
      {% case settings.color_mode %}
        {% when 'light' %}
          --color-body-bg: var(--color-light-bg);
          --color-body-text: var(--color-light-text);
          --color-secondary-bg: var(--color-light-secondary-bg);
          --color-header-bg: var(--color-light-bg);
          --color-header-text: var(--color-light-text);
          --color-footer-bg: var(--color-light-secondary-bg);
          --color-footer-text: var(--color-light-text);
        {% when 'dark' %}
          --color-body-bg: var(--color-dark-bg);
          --color-body-text: var(--color-dark-text);
          --color-secondary-bg: var(--color-dark-secondary-bg);
          --color-header-bg: var(--color-dark-bg);
          --color-header-text: var(--color-dark-text);
          --color-footer-bg: var(--color-dark-secondary-bg);
          --color-footer-text: var(--color-dark-text);
        {% when 'mixed' %}
          --color-body-bg: var(--color-light-bg);
          --color-body-text: var(--color-light-text);
          --color-secondary-bg: var(--color-light-secondary-bg);
          --color-header-bg: var(--color-dark-bg);
          --color-header-text: var(--color-dark-text);
          --color-footer-bg: var(--color-dark-bg);
          --color-footer-text: var(--color-dark-text);
      {% endcase %}
    }
  {% endstyle %}

  {{ 'base.css' | asset_url | stylesheet_tag }}
  {{ 'component-product-card.css' | asset_url | stylesheet_tag }}

  {%- if request.page_type contains 'customers/' -%}
    {{ 'customer.css' | asset_url | stylesheet_tag }}
  {%- endif -%}
</head>

<body class="template-{{ request.page_type | handle }} {% if settings.color_mode %}color-mode-{{ settings.color_mode }}{% endif %}">
  <a class="skip-to-content-link button visually-hidden" href="#MainContent">
    {{ 'accessibility.skip_to_text' | t }}
  </a>

  {%- sections 'header-group' -%}

  <main id="MainContent" class="main-content" role="main" tabindex="-1">
    {{ content_for_layout }}
  </main>

  {%- sections 'footer-group' -%}

  {%- if settings.show_whatsapp_button and settings.contact_whatsapp != blank -%}
    <a href="https://wa.me/{{ settings.contact_whatsapp }}" 
       class="whatsapp-float" 
       target="_blank" 
       rel="noopener noreferrer"
       aria-label="Chat on WhatsApp">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" width="28" height="28">
