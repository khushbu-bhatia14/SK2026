<!doctype html>
<html class="no-js" lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_primary }}">

  {%- if settings.favicon != blank -%}
    <link rel="icon" type="image/png" href="{{ settings.favicon | image_url: width: 32, height: 32 }}">
  {%- endif -%}

  <title>{{ shop.name }}</title>

  {{ content_for_header }}

  {%- liquid
    assign font_heading = settings.font_heading
    assign font_body = settings.font_body
  -%}

  {% style %}
    {{ font_heading | font_face: font_display: 'swap' }}
    {{ font_body | font_face: font_display: 'swap' }}

    :root {
      --color-primary: {{ settings.color_primary }};
      --color-secondary: {{ settings.color_secondary }};
      --color-dark-bg: {{ settings.color_dark_bg }};
      --color-dark-text: {{ settings.color_dark_text }};
      --font-heading: {{ font_heading.family }}, {{ font_heading.fallback_families }};
      --font-body: {{ font_body.family }}, {{ font_body.fallback_families }};
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: var(--font-body);
      background-color: var(--color-dark-bg);
      color: var(--color-dark-text);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .password-page {
      width: 100%;
      max-width: 500px;
      padding: 2rem;
      text-align: center;
    }

    .password-page__logo {
      max-width: 200px;
      margin-bottom: 2rem;
    }

    .password-page__heading {
      font-family: var(--font-heading);
      font-size: 2rem;
      margin-bottom: 1rem;
    }

    .password-page__text {
      margin-bottom: 2rem;
      opacity: 0.8;
    }

    .password-form {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .password-form input {
      padding: 1rem;
      border: 1px solid rgba(255,255,255,0.2);
      background: transparent;
      color: var(--color-dark-text);
      border-radius: 8px;
      font-size: 1rem;
    }

    .password-form button {
      padding: 1rem 2rem;
      background: linear-gradient(135deg, var(--color-primary), var(--color-secondary));
      border: none;
      color: white;
      border-radius: 8px;
      font-size: 1rem;
      cursor: pointer;
      transition: transform 0.2s, opacity 0.2s;
    }

    .password-form button:hover {
      transform: translateY(-2px);
      opacity: 0.9;
    }
  {% endstyle %}
</head>
<body>
  <main class="password-page">
    {%- if settings.logo != blank -%}
      <img class="password-page__logo" src="{{ settings.logo | image_url: width: 400 }}" alt="{{ shop.name }}">
    {%- else -%}
      <h1 class="password-page__heading">{{ shop.name }}</h1>
    {%- endif -%}
    
    <p class="password-page__text">We're working on something amazing. Enter password to preview.</p>
    
    {% form 'storefront_password' %}
      <div class="password-form">
        {{ form.errors | default_errors }}
        <input type="password" name="password" placeholder="Password" required>
        <button type="submit">Enter</button>
      </div>
    {% endform %}
  </main>

  {{ content_for_layout }}
</body>
</html>