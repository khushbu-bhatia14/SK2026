{% comment %}
  Renders icon SVGs
  
  Accepts:
  - icon: {String} Icon name
  - size: {Number} Icon size in pixels
  
  Usage:
  {% render 'icon', icon: 'cart', size: 24 %}
{% endcomment %}

{%- liquid
  assign size = size | default: 24
-%}

{%- case icon -%}
