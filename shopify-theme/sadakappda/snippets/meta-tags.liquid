{% comment %}
  Meta tags for SEO
{% endcomment %}

<meta property="og:site_name" content="{{ shop.name }}">
<meta property="og:url" content="{{ canonical_url }}">

{%- if request.page_type == 'index' -%}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ page_title }}">
  {%- if page_description -%}
    <meta property="og:description" content="{{ page_description | escape }}">
  {%- endif -%}

{%- elsif request.page_type == 'product' -%}
  <meta property="og:type" content="product">
  <meta property="og:title" content="{{ product.title | escape }}">
  {%- if product.featured_media -%}
    <meta property="og:image" content="http:{{ product.featured_media | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ product.featured_media | image_url: width: 1200 }}">
    <meta property="og:image:width" content="{{ product.featured_media.width }}">
    <meta property="og:image:height" content="{{ product.featured_media.height }}">
  {%- endif -%}
  {%- if product.description -%}
    <meta property="og:description" content="{{ product.description | strip_html | truncatewords: 40 | escape }}">
  {%- endif -%}
  <meta property="product:price:amount" content="{{ product.price | money_without_currency }}">
  <meta property="product:price:currency" content="{{ cart.currency.iso_code }}">

{%- elsif request.page_type == 'collection' -%}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ collection.title | escape }}">
  {%- if collection.image -%}
    <meta property="og:image" content="http:{{ collection.image | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ collection.image | image_url: width: 1200 }}">
  {%- endif -%}
  {%- if collection.description -%}
    <meta property="og:description" content="{{ collection.description | strip_html | truncatewords: 40 | escape }}">
  {%- endif -%}

{%- elsif request.page_type == 'article' -%}
  <meta property="og:type" content="article">
  <meta property="og:title" content="{{ article.title | escape }}">
  {%- if article.image -%}
    <meta property="og:image" content="http:{{ article.image | image_url: width: 1200 }}">
    <meta property="og:image:secure_url" content="https:{{ article.image | image_url: width: 1200 }}">
  {%- endif -%}
  {%- if article.excerpt_or_content -%}
    <meta property="og:description" content="{{ article.excerpt_or_content | strip_html | truncatewords: 40 | escape }}">
  {%- endif -%}

{%- elsif request.page_type == 'blog' -%}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ blog.title | escape }}">

{%- elsif request.page_type == 'page' -%}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ page.title | escape }}">

{%- else -%}
  <meta property="og:type" content="website">
  <meta property="og:title" content="{{ page_title | escape }}">
{%- endif -%}

{%- if settings.social_twitter_link != blank -%}
  <meta name="twitter:site" content="{{ settings.social_twitter_link | split: 'twitter.com/' | last | prepend: '@' }}">
{%- endif -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ page_title | escape }}">
{%- if page_description -%}
  <meta name="twitter:description" content="{{ page_description | escape }}">
{%- endif -%}