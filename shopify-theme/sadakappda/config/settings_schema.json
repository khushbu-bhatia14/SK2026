      {
        "type": "range",
        "id": "button_border_radius",
        "label": "Button Border Radius",
        "min": 0,
        "max": 30,
        "step": 2,
        "default": 8,
        "unit": "px",
        "info": "Only applies when 'Rounded Corners' is selected"
