  {
    "name": "Logo & Branding",
    "settings": [
      {
        "type": "header",
        "content": "Desktop Logo"
      },
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo (Desktop)"
      },
      {
        "type": "range",
        "id": "logo_width",
        "label": "Desktop Logo Width",
        "min": 50,
        "max": 300,
        "step": 10,
        "default": 150,
        "unit": "px"
      },
      {
        "type": "header",
        "content": "Mobile Logo"
      },
      {
        "type": "image_picker",
        "id": "logo_mobile",
        "label": "Logo (Mobile)",
        "info": "Optional: Uses desktop logo if not set"
      },
      {
        "type": "range",
        "id": "logo_width_mobile",
        "label": "Mobile Logo Width",
        "min": 40,
        "max": 200,
        "step": 10,
        "default": 100,
        "unit": "px"
      },
      {
        "type": "header",
        "content": "Favicon"
      },
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "Recommended: 32x32px PNG or ICO file"
      }
    ]
  },
  {
    "name": "Color Presets",
    "settings": [
      {
        "type": "select",
        "id": "color_preset",
        "label": "Color Preset",
        "options": [
