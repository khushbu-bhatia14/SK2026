{% comment %}
  Gift Card Template
{% endcomment %}

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Gift Card - {{ shop.name }}</title>
  
  {{ content_for_header }}
  
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      background: linear-gradient(135deg, #FF6B35, #E91E8C);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 2rem;
    }
    
    .gift-card {
      background: white;
      border-radius: 16px;
      padding: 3rem;
      max-width: 500px;
      width: 100%;
      text-align: center;
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.2);
    }
    
    .gift-card__logo {
      max-width: 150px;
      margin: 0 auto 2rem;
    }
    
    .gift-card__title {
      font-size: 1.5rem;
      color: #333;
      margin-bottom: 0.5rem;
    }
    
    .gift-card__value {
      font-size: 3rem;
      font-weight: 700;
      background: linear-gradient(135deg, #FF6B35, #E91E8C);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      margin: 1.5rem 0;
    }
    
    .gift-card__code {
      background: #f5f5f5;
      padding: 1rem 1.5rem;
      border-radius: 8px;
      font-family: monospace;
      font-size: 1.25rem;
      letter-spacing: 0.1em;
      margin: 1.5rem 0;
    }
    
    .gift-card__qr {
      margin: 2rem 0;
    }
    
    .gift-card__qr img {
      max-width: 120px;
      margin: 0 auto;
    }
    
    .gift-card__actions {
      display: flex;
      gap: 1rem;
      justify-content: center;
      margin-top: 2rem;
    }
    
    .gift-card__btn {
      padding: 0.75rem 1.5rem;
      border-radius: 8px;
      font-size: 0.9375rem;
      font-weight: 600;
      text-decoration: none;
      transition: transform 0.2s;
    }
    
    .gift-card__btn:hover {
      transform: translateY(-2px);
    }
    
    .gift-card__btn--primary {
      background: linear-gradient(135deg, #FF6B35, #E91E8C);
      color: white;
      border: none;
      cursor: pointer;
    }
    
    .gift-card__btn--secondary {
      background: white;
      color: #333;
      border: 2px solid #333;
    }
    
    .gift-card__expired {
      color: #e74c3c;
      font-weight: 600;
      margin-top: 1rem;
    }
    
    .gift-card__balance {
      font-size: 0.875rem;
      color: #666;
      margin-top: 0.5rem;
    }
    
    @media print {
      body {
        background: white;
      }
      
      .gift-card {
        box-shadow: none;
      }
      
      .gift-card__actions {
        display: none;
      }
    }
  </style>
</head>
<body>
  <div class="gift-card">
    {%- if settings.logo != blank -%}
      <img class="gift-card__logo" src="{{ settings.logo | image_url: width: 300 }}" alt="{{ shop.name }}">
    {%- else -%}
      <h2>{{ shop.name }}</h2>
    {%- endif -%}
    
    <h1 class="gift-card__title">You've received a gift card!</h1>
    
    <p class="gift-card__value">{{ gift_card.balance | money }}</p>
    
    {%- if gift_card.balance != gift_card.initial_value -%}
      <p class="gift-card__balance">Original value: {{ gift_card.initial_value | money }}</p>
    {%- endif -%}
    
    <div class="gift-card__code" id="gift-card-code">
      {{ gift_card.code | format_code }}
    </div>
    
    <div class="gift-card__qr">
      {{ gift_card | qr_code }}
    </div>
    
    {%- if gift_card.expired -%}
      <p class="gift-card__expired">This gift card has expired.</p>
    {%- endif -%}
    
    <div class="gift-card__actions">
      <a href="{{ shop.url }}" class="gift-card__btn gift-card__btn--primary">Shop Now</a>
      <button class="gift-card__btn gift-card__btn--secondary" onclick="window.print()">Print</button>
    </div>
  </div>
</body>
</html>