{% comment %}
  Contact Page Template
{% endcomment %}

{% section 'page-header' %}

<section class="section contact-page">
  <div class="container">
    <div class="contact-page__grid">
      <div class="contact-page__info">
        <h2>Get in Touch</h2>
        <p>We'd love to hear from you. Fill out the form or reach out directly.</p>
        
        <div class="contact-page__details">
          {%- if settings.contact_email != blank -%}
            <div class="contact-page__detail">
              <h4>Email</h4>
              <a href="mailto:{{ settings.contact_email }}">{{ settings.contact_email }}</a>
            </div>
          {%- endif -%}
          
          {%- if settings.contact_phone != blank -%}
            <div class="contact-page__detail">
              <h4>Phone</h4>
              <a href="tel:{{ settings.contact_phone }}">{{ settings.contact_phone }}</a>
            </div>
          {%- endif -%}
          
          {%- if settings.contact_whatsapp != blank -%}
            <div class="contact-page__detail">
              <h4>WhatsApp</h4>
              <a href="https://wa.me/{{ settings.contact_whatsapp }}" target="_blank" rel="noopener">
                Chat with us on WhatsApp
              </a>
            </div>
          {%- endif -%}
        </div>
        
        <div class="contact-page__hours">
          <h4>Support Hours</h4>
          <p>Monday - Saturday: 10 AM - 7 PM IST</p>
          <p>Sunday: Closed</p>
        </div>
      </div>
      
      <div class="contact-page__form">
        {% form 'contact' %}
          {%- if form.posted_successfully? -%}
            <div class="contact-page__success">
              <p>Thanks for reaching out! We'll get back to you soon.</p>
            </div>
          {%- endif -%}
          
          {{ form.errors | default_errors }}
          
          <div class="form-group">
            <label for="contact-name">Name</label>
            <input type="text" id="contact-name" name="contact[name]" required>
          </div>
          
          <div class="form-group">
            <label for="contact-email">Email</label>
            <input type="email" id="contact-email" name="contact[email]" required>
          </div>
          
          <div class="form-group">
            <label for="contact-phone">Phone</label>
            <input type="tel" id="contact-phone" name="contact[phone]">
          </div>
          
          <div class="form-group">
            <label for="contact-subject">Subject</label>
            <select id="contact-subject" name="contact[subject]">
              <option value="General Inquiry">General Inquiry</option>
              <option value="Order Status">Order Status</option>
              <option value="Returns & Exchange">Returns & Exchange</option>
              <option value="Size Help">Size Help</option>
              <option value="Other">Other</option>
            </select>
          </div>
          
          <div class="form-group">
            <label for="contact-message">Message</label>
            <textarea id="contact-message" name="contact[body]" rows="5" required></textarea>
          </div>
          
          <button type="submit" class="button button--primary button--full-width">Send Message</button>
        {% endform %}
      </div>
    </div>
  </div>
</section>

<style>
  .contact-page__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }
  
  .contact-page__info h2 {
    margin-bottom: 1rem;
  }
  
  .contact-page__info > p {
    opacity: 0.8;
    margin-bottom: 2rem;
  }
  
  .contact-page__details {
    margin-bottom: 2rem;
  }
  
  .contact-page__detail {
    margin-bottom: 1.5rem;
  }
  
  .contact-page__detail h4 {
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.6;
    margin-bottom: 0.25rem;
  }
  
  .contact-page__detail a {
    font-size: 1.125rem;
    color: var(--color-primary);
  }
  
  .contact-page__hours h4 {
    margin-bottom: 0.5rem;
  }
  
  .contact-page__hours p {
    font-size: 0.9375rem;
    opacity: 0.8;
    margin-bottom: 0.25rem;
  }
  
  .contact-page__form {
    background: var(--color-secondary-bg);
    padding: 2rem;
    border-radius: var(--border-radius);
  }
  
  .contact-page__success {
    background: rgba(39, 174, 96, 0.1);
    color: #27ae60;
    padding: 1rem;
    border-radius: var(--border-radius);
    margin-bottom: 1.5rem;
  }
  
  .form-group {
    margin-bottom: 1.25rem;
  }
  
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  
  @media (max-width: 768px) {
    .contact-page__grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>

{% schema %}
{
  "name": "Contact Page",
  "settings": []
}
{% endschema %}